<div class="post-show">
  Date: <%= @post.date %></br >
  Title: <%= @post.title %></br >
  Details: <%= @post.body %></br >
  <% if current_user == @post.user %>
    <%= link_to "Edit Post", edit_post_path(@post) %> |
    <%= link_to "Delete Post", @post, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>

<div class="">
  <h3>Session videos</h3>
  <% @videos.each do |video| %>
  <div class="">
    <%= link_to video.title, post_video_path(@post, video) %></br >
    <% if current_user == video.user %>
      <%= link_to "Edit Video", edit_video_path(video) %> |
      <%= link_to "Delete Video", post_video_path(@post, video), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
</div>

<%= render "./videos/new" %>
<%= link_to("Back", my_log_users_path) %>
