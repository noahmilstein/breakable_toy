<div class="post-show">
  <%= @post.title %>
  <%= @post.date %>
  <%= @post.body %>
  <% if current_user == @post.user %>
    <%= link_to "Edit Post", edit_post_path(@post) %> |
    <%= link_to "Delete Post", @post, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>

<div class="">
<% @videos.each do |video| %>
  <div class="">
    <%= link_to video.title, video_path(video) %>
    <% if current_user == video.user %>
      <%= link_to "Edit Video", edit_video_path(video) %> |
      <%= link_to "Delete Video", video_path(video), method: :delete, data: { confirm: "Are you sure?" } %>
    <% elsif current_user != video.user && current_user.admin %>
      <%= link_to "Delete as SPAM", video_path(video), method: :delete, data: { confirm: "Are you sure?" } %> |
    <% end %>
  </div>
<% end %>
</div>

<%= render "./videos/new" %>
