<div class="container post-form">
  <%= form_for [@user, @post] do |f| %>
    <div class="form-group row">
      <%= f.label(:title, "Title") %></br >
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label(:date, "Date") %></br >
      <%= f.date_field :date, value: Date.today.strftime("%m/%d/%Y"), class: "form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label(:body, "Body") %></br >
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div type="submit row" style="margin:auto">
      <%= f.submit("Submit") %>
    </div>
  <% end %>
</div>
