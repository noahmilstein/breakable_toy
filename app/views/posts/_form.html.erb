<div class="">
  <%= form_for [@user, @post] do |f| %>
    <%= f.label(:title, "Title") %>
    <%= f.text_field(:title) %>
    <%= f.label(:date, "Date") %>
    <%= f.date_field :date, value: Date.today.strftime("%m/%d/%Y") %>
    <%= f.label(:body, "Body") %>
    <%= f.text_field(:body) %>
    <%= f.submit("Submit") %>
  <% end %>
</div>
