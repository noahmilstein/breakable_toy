<div class="video-show">
  <%= @video.title %></br>
  <%= content_tag(:iframe, nil, src: "//www.youtube.com/embed/#{@video.embed_id}") %></br >
  Tags: <%= @video.tag_list %></br >
  <% if current_user == @video.user %>
    <%= link_to "Edit Video", edit_video_path(@video) %> |
    <%= link_to "Delete Video", post_video_path(@post, @video), method: :delete, data: { confirm: "Are you sure?" } %> |
  <% end %>
  <%= link_to("Back", user_post_path(@user, @post)) %>
</div>

<h3>Comments</h3>

<%= render "comment_form" %>

<div class="">
  <ol class="comments">
    <% unless @comments.nil? %>
      <% @comments.each do |comment| %>
        <li class="comment">
          <%= comment.body %></br >
          <%= comment.user.username %>
          <% if current_user == comment.user %>
            </br><%= link_to "Edit Comment", edit_video_comment_path(comment.video, comment) %> |
            <%= link_to "Delete Comment", video_comment_path(@video, comment), method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ol>
</div>
