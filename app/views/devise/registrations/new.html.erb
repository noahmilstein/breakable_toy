<div class="container" style="width:35%">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group row">
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name, "First Name" %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :last_name, "Last Name" %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :username, "Username" %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :state, "State" %><br />
        <%= f.select :state, options_for_select(User::STATES), class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :city, "City" %><br />
        <%= f.text_field :city, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :zip, "Zip" %><br />
        <%= f.text_field :zip, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :phone, "Phone" %><br />
        <%= f.telephone_field :phone, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :image, "Add Avatar" %><br />
        <%= f.file_field :image, id: "Add Avatar", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm Password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="row">
        <%= f.label :seeking_coach, "Are you seeking a coach?" %>
        <%= f.check_box :seeking_coach, class: "form-control" %>
      </div>

      <div class="row">
        <%= f.label :accept_email, "Can our coaches email you?" %>
        <%= f.check_box :accept_email, class: "form-control" %>
      </div>

      <div class="row">
        <%= f.label :accept_phone, "Can our coaches call or text you?" %>
        <%= f.check_box :accept_phone, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", class: "form-control" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
